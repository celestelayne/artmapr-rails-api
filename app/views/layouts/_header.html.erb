<div class="container-fluid">

  <div class="col-md-4">
    <li><%= link_to image_tag("ArtMapr-Logo-05.png", :alt =>'ArtMapr Brand Logo', :width => 80),'#', :class => 'navbar-brand' %></li>
  </div>

  <div class="col-md-8 navbar-right">
    <ul class="menu-items">
      <li class="nav-item"><%= link_to "About", '/about' %></li>
      <li class="nav-item"><%= link_to "Contact", '/contact' %></li>
      <% if logged_in? %>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account<b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><%= link_to "Profile", current_user %></li>
          <li><%= link_to "Settings", '#' %></li>
          <li class="divider"></li>
          <li><%= link_to "Log Out", logout_path %></li>
        </ul>
      </li>

      <% else %>
        <li><%= link_to "Log In", '/login', id: "login-button", class: "btn btn-outlined" %></li>
        <li><%= link_to "Sign Up", '/signup', id: "signup-button", class: "btn btn-outlined" %></li>
      <% end %>
    </ul>
  </div>

</div>
